<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2E32"
    tools:context="com.example.bookmarked.CreateAccount">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/signup_bg" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="420dp"
        android:layout_height="728dp"
        android:layout_marginBottom="329dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/signupwoman_visual" />

    <ImageButton
        android:id="@+id/createaccountSubmit_button"
        android:layout_width="169dp"
        android:layout_height="75dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="76dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#E6E6E6"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forgotpasssubmit_visual" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="665dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="47dp"
        android:text="Already have an account?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createaccountSignin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="268dp"
        android:layout_marginTop="665dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="47dp"
        android:text="SIGN IN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TextFname"
        android:layout_width="136dp"
        android:layout_height="35dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="406dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TextLname"
        android:layout_width="146dp"
        android:layout_height="35dp"
        android:layout_marginStart="222dp"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="406dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TextAddress"
        android:layout_width="308dp"
        android:layout_height="32dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="365dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TextPhone"
        android:layout_width="307dp"
        android:layout_height="31dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="375dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="325dp"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="phone"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TextEmail"
        android:layout_width="309dp"
        android:layout_height="33dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="414dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="284dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TextUsername"
        android:layout_width="134dp"
        android:layout_height="31dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="457dp"
        android:layout_marginEnd="226dp"
        android:layout_marginBottom="243dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TextPassword"
        android:layout_width="138dp"
        android:layout_height="30dp"
        android:layout_marginStart="222dp"
        android:layout_marginTop="458dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="243dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/securityQuestion"
        android:layout_width="313dp"
        android:layout_height="23dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="498dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="210dp"
        android:background="#00000000"
        android:entries="@array/security_questions"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/securityAnswer"
        android:layout_width="312dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Answer"
        android:inputType="textPersonName"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/securityQuestion" />


</androidx.constraintlayout.widget.ConstraintLayout>